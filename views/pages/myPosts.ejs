                                    <script>
                                        // Edit Modal Functions
                                        let editPostId = null;
                                        let removeCurrentImageFlag = false; // ‚úÖ Flag to track if removing current image

                                        function openEditModal(postId, postData) {
                                            editPostId = postId;
                                            removeCurrentImageFlag = false; // ‚úÖ Reset flag

                                            // Set the form action dynamically
                                            document.getElementById('editPostForm').action = `/api/posts/${postId}?_method=PUT`;

                                            // Set hidden input value
                                            document.getElementById('postIdInput').value = postId;

                                            // ‚úÖ Create or update hidden input for removeImage flag
                                            let removeImageInput = document.getElementById('removeImageInput');
                                            if (!removeImageInput) {
                                                removeImageInput = document.createElement('input');
                                                removeImageInput.type = 'hidden';
                                                removeImageInput.id = 'removeImageInput';
                                                removeImageInput.name = 'removeImage';
                                                document.getElementById('editPostForm').appendChild(removeImageInput);
                                            }
                                            removeImageInput.value = 'false';

                                            // Populate form with existing data
                                            document.getElementById('editPostTitle').value = postData.title || '';
                                            document.getElementById('editPostDescription').value = postData.description || '';
                                            document.getElementById('editTitleCount').textContent = postData.title ? postData.title.length : 0;
                                            document.getElementById('editDescCount').textContent = postData.description ? postData.description.length : 0;

                                            // Show current image if exists
                                            if (postData.image) {
                                                const currentImg = document.getElementById('currentImg');
                                                currentImg.src = '/' + postData.image.replace(/\\/g, '/'); // ‚úÖ Converts backslashes to forward slashes

                                                document.getElementById('currentImagePreview').classList.add('active');
                                            } else {
                                                document.getElementById('currentImagePreview').classList.remove('active');
                                            }

                                            // Reset new image preview
                                            document.getElementById('editImagePreview').classList.remove('active');
                                            document.getElementById('editPostImage').value = '';

                                            // Show modal
                                            document.getElementById('editPostModal').classList.add('active');
                                        }

                                        function closeEditModal() {
                                            editPostId = null;
                                            removeCurrentImageFlag = false; // ‚úÖ Reset flag
                                            document.getElementById('editPostModal').classList.remove('active');
                                            document.getElementById('editPostForm').reset();
                                            document.getElementById('editImagePreview').classList.remove('active');
                                            document.getElementById('currentImagePreview').classList.remove('active');
                                            document.getElementById('editTitleCount').textContent = '0';
                                            document.getElementById('editDescCount').textContent = '0';
                                        }

                                        // ‚úÖ Function to remove current image
                                        function removeCurrentImageFunc() {
                                            removeCurrentImageFlag = true;
                                            document.getElementById('currentImagePreview').classList.remove('active');
                                            document.getElementById('currentImg').src = '';
                                            alert('Current image will be removed when you save');
                                        }

                                        // Edit File Upload Handling
                                        const editFileUpload = document.getElementById('editFileUpload');
                                        const editFileInput = document.getElementById('editPostImage');
                                        const editImagePreview = document.getElementById('editImagePreview');
                                        const editPreviewImg = document.getElementById('editPreviewImg');
                                        const editPreviewName = document.getElementById('editPreviewName');

                                        if (editFileUpload) {
                                            editFileUpload.addEventListener('click', () => {
                                                editFileInput.click();
                                            });

                                            editFileUpload.addEventListener('dragover', (e) => {
                                                e.preventDefault();
                                                editFileUpload.classList.add('active');
                                            });

                                            editFileUpload.addEventListener('dragleave', () => {
                                                editFileUpload.classList.remove('active');
                                            });

                                            editFileUpload.addEventListener('drop', (e) => {
                                                e.preventDefault();
                                                editFileUpload.classList.remove('active');
                                                const files = e.dataTransfer.files;
                                                if (files.length > 0) {
                                                    editFileInput.files = files;
                                                    handleEditImageUpload();
                                                }
                                            });
                                        }

                                        if (editFileInput) {
                                            editFileInput.addEventListener('change', handleEditImageUpload);
                                        }

                                        function handleEditImageUpload() {
                                            const file = editFileInput.files[0];

                                            if (file) {
                                                if (file.size > 5 * 1024 * 1024) {
                                                    alert('File size must be less than 5MB');
                                                    editFileInput.value = '';
                                                    editImagePreview.classList.remove('active');
                                                    return;
                                                }

                                                const reader = new FileReader();
                                                reader.onload = (e) => {
                                                    editPreviewImg.src = e.target.result;
                                                    editPreviewName.textContent = 'üìÅ ' + file.name + ' (' + (file.size / 1024).toFixed(2) + ' KB)';
                                                    editImagePreview.classList.add('active');
                                                };
                                                reader.readAsDataURL(file);
                                            }
                                        }

                                        function removeEditImage() {
                                            editFileInput.value = '';
                                            editPreviewImg.src = '';
                                            editPreviewName.textContent = '';
                                            editImagePreview.classList.remove('active');
                                        }

                                        // Edit Character Counters
                                        const editTitleInput = document.getElementById('editPostTitle');
                                        const editDescInput = document.getElementById('editPostDescription');

                                        if (editTitleInput) {
                                            editTitleInput.addEventListener('input', () => {
                                                document.getElementById('editTitleCount').textContent = editTitleInput.value.length;
                                            });
                                        }

                                        if (editDescInput) {
                                            editDescInput.addEventListener('input', () => {
                                                document.getElementById('editDescCount').textContent = editDescInput.value.length;
                                            });
                                        }

                                        // Preview Edit Post
                                        function previewEditPost() {
                                            const title = document.getElementById('editPostTitle').value.trim();
                                            const description = document.getElementById('editPostDescription').value.trim();

                                            if (!title || !description) {
                                                alert('Please fill in title and description to preview');
                                                return;
                                            }

                                            alert('Preview:\n\n' + title + '\n\n' + description);
                                        }

                                        // Close modal when clicking outside
                                        window.onclick = function (event) {
                                            const editModal = document.getElementById('editPostModal');
                                            if (event.target === editModal) {
                                                closeEditModal();
                                            }
                                        }

                                        // ‚úÖ Form Submission - Updated with removeImage flag
                                        if (document.getElementById('editPostForm')) {
                                            document.getElementById('editPostForm').addEventListener('submit', function (e) {
                                                const title = document.getElementById('editPostTitle').value.trim();
                                                const description = document.getElementById('editPostDescription').value.trim();

                                                if (!title || !description) {
                                                    e.preventDefault();
                                                    alert('Please fill in all required fields');
                                                    return;
                                                }

                                                // ‚úÖ Set the removeImage flag before submission
                                                document.getElementById('removeImageInput').value = removeCurrentImageFlag ? 'true' : 'false';
                                            });
                                        }


                                        // Delete Post Functions
                                        let deletePostId = null;

                                        function confirmDelete(postId, postTitle) {
                                            deletePostId = postId;
                                            document.getElementById('deletePostTitle').textContent = postTitle;
                                            document.getElementById('deleteConfirm').classList.add('active');
                                        }

                                        function cancelDelete() {
                                            deletePostId = null;
                                            document.getElementById('deleteConfirm').classList.remove('active');
                                        }

                                        function deletePost() {
                                            if (deletePostId) {
                                                // Create form and submit
                                                const form = document.createElement('form');
                                                form.method = 'POST';
                                                form.action = `/api/posts/${deletePostId}?_method=DELETE`;

                                                document.body.appendChild(form);
                                                form.submit();
                                            }
                                        }

                                        // Create Post Modal Functions
                                        function openCreateModal() {
                                            document.getElementById('createPostModal').classList.add('active');
                                        }

                                        function closeCreateModal() {
                                            document.getElementById('createPostModal').classList.remove('active');
                                            document.getElementById('createPostForm').reset();
                                            document.getElementById('imagePreview').classList.remove('active');
                                            document.getElementById('titleCount').textContent = '0';
                                            document.getElementById('descCount').textContent = '0';
                                        }

                                        // File upload handling
                                        const fileUpload = document.getElementById('fileUpload');
                                        const fileInput = document.getElementById('postImage');
                                        const imagePreview = document.getElementById('imagePreview');
                                        const previewImg = document.getElementById('previewImg');
                                        const previewName = document.getElementById('previewName');

                                        // Click to upload
                                        if (fileUpload) {
                                            fileUpload.addEventListener('click', () => {
                                                fileInput.click();
                                            });

                                            // Drag and drop
                                            fileUpload.addEventListener('dragover', (e) => {
                                                e.preventDefault();
                                                fileUpload.classList.add('active');
                                            });

                                            fileUpload.addEventListener('dragleave', () => {
                                                fileUpload.classList.remove('active');
                                            });

                                            fileUpload.addEventListener('drop', (e) => {
                                                e.preventDefault();
                                                fileUpload.classList.remove('active');

                                                const files = e.dataTransfer.files;
                                                if (files.length > 0) {
                                                    fileInput.files = files;
                                                    handleImageUpload();
                                                }
                                            });
                                        }

                                        // File input change
                                        if (fileInput) {
                                            fileInput.addEventListener('change', handleImageUpload);
                                        }

                                        function handleImageUpload() {
                                            const file = fileInput.files[0];

                                            if (file) {
                                                // Check file size (5MB)
                                                if (file.size > 5 * 1024 * 1024) {
                                                    alert('File size must be less than 5MB');
                                                    fileInput.value = '';
                                                    imagePreview.classList.remove('active');
                                                    return;
                                                }

                                                // Show preview
                                                const reader = new FileReader();
                                                reader.onload = (e) => {
                                                    previewImg.src = e.target.result;
                                                    previewName.textContent = 'üìÅ ' + file.name + ' (' + (file.size / 1024).toFixed(2) + ' KB)';
                                                    imagePreview.classList.add('active');
                                                };
                                                reader.readAsDataURL(file);
                                            }
                                        }

                                        function removeImage() {
                                            fileInput.value = '';
                                            previewImg.src = '';
                                            previewName.textContent = '';
                                            imagePreview.classList.remove('active');
                                        }

                                        // Character counters
                                        const titleInput = document.getElementById('postTitle');
                                        const descInput = document.getElementById('postDescription');

                                        if (titleInput) {
                                            titleInput.addEventListener('input', () => {
                                                document.getElementById('titleCount').textContent = titleInput.value.length;
                                            });
                                        }

                                        if (descInput) {
                                            descInput.addEventListener('input', () => {
                                                document.getElementById('descCount').textContent = descInput.value.length;
                                            });
                                        }

                                        // Preview Post Function
                                        function previewPost() {
                                            const title = document.getElementById('postTitle').value.trim();
                                            const description = document.getElementById('postDescription').value.trim();

                                            if (!title || !description) {
                                                alert('Please fill in title and description to preview');
                                                return;
                                            }

                                            // You can add preview modal logic here if needed
                                            alert('Preview: ' + title + '\n\n' + description);
                                        }

                                        // Close modal when clicking outside
                                        window.onclick = function (event) {
                                            const deleteDialog = document.getElementById('deleteConfirm');
                                            if (event.target === deleteDialog) {
                                                cancelDelete();
                                            }
                                        }

                                        // Form submission validation
                                        if (document.getElementById('createPostForm')) {
                                            document.getElementById('createPostForm').addEventListener('submit', function (e) {
                                                const title = document.getElementById('postTitle').value.trim();
                                                const description = document.getElementById('postDescription').value.trim();

                                                if (!title || !description) {
                                                    e.preventDefault();
                                                    alert('Please fill in all required fields');
                                                }
                                            });
                                        }
                                    </script>
