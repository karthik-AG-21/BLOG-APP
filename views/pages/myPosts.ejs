                                                            <input type="file" id="editPostImage" name="image"
                                                                accept="image/*" />
                                                        </div>

                                                        <!-- Current Image Display -->
                                                        <div class="image-preview " id="currentImagePreview"
                                                            style="margin-top: 1.5rem;">
                                                            <p
                                                                style="color: #999; font-size: 0.9rem; margin-bottom: 1rem;">
