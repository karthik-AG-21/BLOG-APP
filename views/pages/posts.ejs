<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Community Posts - Home</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
            min-height: 100vh;
            position: relative;
            overflow-x: hidden;
        }

        body::before {
            content: '';
            position: fixed;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 1px, transparent 1px);
            background-size: 50px 50px;
            animation: moveBackground 20s linear infinite;
            z-index: 0;
        }

        nav {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(20px);
            padding: 1rem 2rem;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .nav-container {
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: relative;
            z-index: 1;
        }

        .logo {
            font-size: 1.8rem;
            font-weight: bold;
            background: linear-gradient(135deg, #ffffff 0%, #f093fb 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            cursor: pointer;
            text-shadow: 0 0 30px rgba(255, 255, 255, 0.5);
            transition: transform 0.3s;
        }

        .logo:hover {
            transform: scale(1.1) rotate(-2deg);
        }

        .nav-links {
            display: flex;
            gap: 2rem;
            align-items: center;
        }

        .nav-links a {
            text-decoration: none;
            color: white;
            font-weight: 600;
            transition: all 0.3s;
            cursor: pointer;
            position: relative;
            padding: 0.5rem 0;
        }

        .nav-links a::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 0;
            height: 2px;
            background: white;
            transition: width 0.3s;
        }

        .nav-links a:hover::after {
            width: 100%;
        }

        .nav-links a:hover {
            transform: translateY(-2px);
            text-shadow: 0 0 20px rgba(255, 255, 255, 0.8);
        }

        .auth-buttons {
            display: flex;
            gap: 1rem;
            align-items: center;
        }

        .welcome-text {
            color: white;
            font-weight: 600;
            margin-right: 0.5rem;
        }

        .btn {
            padding: 0.7rem 1.8rem;
            border: none;
            border-radius: 30px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s;
            position: relative;
            overflow: hidden;
        }

        .btn::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.3);
            transform: translate(-50%, -50%);
            transition: width 0.6s, height 0.6s;
        }

        .btn:hover::before {
            width: 300px;
            height: 300px;
        }

        .btn-login {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            border: 2px solid rgba(255, 255, 255, 0.5);
            backdrop-filter: blur(10px);
        }

        .btn-login:hover {
            background: rgba(255, 255, 255, 0.3);
            border-color: white;
            box-shadow: 0 5px 25px rgba(255, 255, 255, 0.3);
            transform: translateY(-3px);
        }

        .btn-register {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
            box-shadow: 0 5px 20px rgba(245, 87, 108, 0.4);
        }

        .btn-register:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 30px rgba(245, 87, 108, 0.6);
        }

        .btn-otp {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            border: 2px solid rgba(255, 255, 255, 0.5);
            backdrop-filter: blur(10px);
        }

        .btn-otp:hover {
            background: rgba(255, 255, 255, 0.3);
            box-shadow: 0 5px 25px rgba(255, 255, 255, 0.3);
            transform: translateY(-3px);
        }

        .btn-logout {
            background: rgba(255, 67, 54, 0.3);
            color: white;
            border: 2px solid rgba(255, 67, 54, 0.6);
            backdrop-filter: blur(10px);
        }

        .btn-logout:hover {
            background: rgba(255, 67, 54, 0.5);
            box-shadow: 0 5px 25px rgba(255, 67, 54, 0.4);
            transform: translateY(-3px);
        }

        @keyframes moveBackground {
            0% { transform: translate(0, 0); }
            100% { transform: translate(50px, 50px); }
        }

        .container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 2rem;
            position: relative;
            z-index: 1;
        }

        .hero {
            text-align: center;
            color: white;
            margin-bottom: 3rem;
            animation: fadeInDown 1s ease;
        }

        @keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .hero h1 {
            font-size: 3.5rem;
            margin-bottom: 1rem;
            text-shadow: 0 0 40px rgba(255, 255, 255, 0.5);
            background: linear-gradient(135deg, #ffffff 0%, #f093fb 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .hero p {
            font-size: 1.3rem;
            opacity: 0.95;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
        }

        .posts-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 2.5rem;
            margin-bottom: 3rem;
        }

        .post-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 25px;
            overflow: hidden;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            cursor: pointer;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .post-card:hover {
            transform: translateY(-15px) scale(1.02);
            box-shadow: 0 20px 60px rgba(118, 75, 162, 0.3);
        }

        .post-image {
            width: 100%;
            height: 200px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 3rem;
            overflow: hidden;
        }

        .post-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .post-content {
            padding: 1.5rem;
            position: relative;
            z-index: 1;
        }

        .post-author {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 1rem;
        }

        .avatar {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #f093fb 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        }

        .author-info h4 {
            font-size: 0.95rem;
            color: #333;
            font-weight: 600;
        }

        .author-info span {
            font-size: 0.8rem;
            color: #888;
        }

        .post-title {
            font-size: 1.4rem;
            margin-bottom: 0.5rem;
            color: #333;
            font-weight: 700;
        }

        .post-excerpt {
            color: #666;
            line-height: 1.7;
            margin-bottom: 1rem;
        }

        .post-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 1rem;
            border-top: 2px solid rgba(102, 126, 234, 0.1);
        }

        .post-stats {
            display: flex;
            gap: 1.5rem;
            color: #888;
            font-size: 0.95rem;
        }

        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            backdrop-filter: blur(10px);
            z-index: 1000;
            align-items: center;
            justify-content: center;
        }

        .modal.active {
            display: flex;
        }

        .modal-content {
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.9) 100%);
            backdrop-filter: blur(20px);
            padding: 3rem;
            border-radius: 30px;
            text-align: center;
            max-width: 500px;
            animation: slideUp 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            box-shadow: 0 20px 80px rgba(102, 126, 234, 0.3);
            border: 2px solid rgba(255, 255, 255, 0.3);
        }

        @keyframes slideUp {
            from {
                transform: translateY(100px) scale(0.8);
                opacity: 0;
            }
            to {
                transform: translateY(0) scale(1);
                opacity: 1;
            }
        }

        .modal-icon {
            font-size: 5rem;
            margin-bottom: 1rem;
            animation: bounce 2s infinite;
        }

        @keyframes bounce {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-20px); }
        }

        .modal-content h2 {
            color: #333;
            margin-bottom: 1rem;
            font-size: 2rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .modal-content p {
            color: #666;
            margin-bottom: 2rem;
            line-height: 1.6;
            font-size: 1.1rem;
        }

        .modal-buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
        }

        .btn-modal {
            padding: 1rem 2.5rem;
            border: none;
            border-radius: 30px;
            cursor: pointer;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s;
            position: relative;
            overflow: hidden;
        }

        .btn-modal::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.5);
            transform: translate(-50%, -50%);
            transition: width 0.6s, height 0.6s;
        }

        .btn-modal:hover::before {
            width: 400px;
            height: 400px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            box-shadow: 0 5px 25px rgba(102, 126, 234, 0.4);
        }

        .btn-primary:hover {
            transform: scale(1.05) translateY(-3px);
            box-shadow: 0 10px 35px rgba(102, 126, 234, 0.6);
        }

        .btn-secondary {
            background: rgba(224, 224, 224, 0.5);
            backdrop-filter: blur(10px);
            color: #333;
            border: 2px solid rgba(0, 0, 0, 0.1);
        }

        .btn-secondary:hover {
            background: rgba(208, 208, 208, 0.7);
            transform: scale(1.05);
        }

        .btn-danger {
            background: rgba(255, 67, 54, 0.8);
            color: white;
            border: 2px solid rgba(255, 67, 54, 0.6);
        }

        .btn-danger:hover {
            background: rgba(255, 67, 54, 1);
            transform: scale(1.05) translateY(-3px);
            box-shadow: 0 10px 35px rgba(255, 67, 54, 0.6);
        }

        .otp-input {
            width: 100%;
            padding: 1rem;
            margin: 1rem 0;
            border: 2px solid rgba(102, 126, 234, 0.3);
            border-radius: 15px;
            font-size: 1.2rem;
            letter-spacing: 5px;
            text-align: center;
            transition: all 0.3s;
        }

        .otp-input:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 15px rgba(102, 126, 234, 0.3);
        }

        .resend-otp {
            margin-top: 1.5rem;
            padding-top: 1.5rem;
            border-top: 1px solid rgba(0, 0, 0, 0.1);
        }

        .resend-otp p {
            color: #666;
            font-size: 0.95rem;
            margin-bottom: 0.5rem;
        }

        .btn-link {
            background: transparent;
            color: #667eea;
            border: none;
            padding: 0.5rem 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
        }

        .btn-link:hover {
            color: #764ba2;
            text-decoration: underline;
        }

        footer {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(20px);
            padding: 2rem;
            text-align: center;
            color: white;
            border-top: 1px solid rgba(255, 255, 255, 0.2);
            position: relative;
            z-index: 1;
        }

        @media (max-width: 768px) {
            .hero h1 {
                font-size: 2.5rem;
            }
            .posts-grid {
                grid-template-columns: 1fr;
            }
            .nav-links {
                display: none;
            }
            .modal-content {
                margin: 1rem;
                padding: 2rem;
            }
        }
    </style>
</head>

<body>
    <!-- Navigation -->
    <nav>
        <div class="nav-container">
            <div class="logo" onclick="triggerModal()">BlogShare</div>
            <div class="nav-links">
                <a href="/">Home</a>
                <a onclick="triggerModal()">Explore</a>
                <a onclick="triggerModal()">Trending</a>
                <a onclick="triggerModal()">About</a>
            </div>
            <div class="auth-buttons">
                <% if (!user) { %>
                    <button class="btn btn-login" onclick="window.location.href='/login'">Login</button>
                    <button class="btn btn-register" onclick="window.location.href='/register'">Sign Up</button>
                <% } else { %>
                    <span class="welcome-text">Welcome, <%= user.name %></span>
                    <button class="btn btn-otp" onclick="triggerModal()">Verify OTP</button>
                    <button class="btn btn-logout" onclick="window.location.href='/logout'">Logout</button>
                <% } %>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
        <div class="hero">
            <h1>Welcome to BlogShare</h1>
            <p>Discover amazing content from our community</p>
        </div>

        <!-- Posts Grid -->
        <div class="posts-grid">
            <% posts.forEach(function(post) { %>
                <div class="post-card" onclick="triggerModal()">
                    <div class="post-image">
                        <% if (post.image) { %>
                            <img src="/<%= post.image.replace(/\\/g, '/') %>" alt="<%= post.title %>" />
                        <% } else { %>
                            <div style="width:100%; height:100%; display:flex; align-items:center; justify-content:center;">
                                <%= post.title.charAt(0).toUpperCase() %>
                            </div>
                        <% } %>
                    </div>

                    <div class="post-content">
                        <div class="post-author">
                            <div class="avatar">
                                <%= post.userId && post.userId.name ? post.userId.name.charAt(0).toUpperCase() : "U" %>
                            </div>
                            <div class="author-info">
                                <h4><%= post.userId && post.userId.name ? post.userId.name : "Unknown User" %></h4>
                                <span>
                                    <%= post.createdAt ? new Date(post.createdAt).toLocaleString("en-IN", {
                                        dateStyle: "medium",
                                        timeStyle: "short"
                                    }) : "Just now" %>
                                </span>
                            </div>
                        </div>

                        <h3 class="post-title"><%= post.title %></h3>
                        <p class="post-excerpt"><%= post.description %></p>

                        <div class="post-footer">
                            <div class="post-stats">
                                <span>❤️ <%= post.likes || 0 %></span>
                                <span>💬 <%= post.comments || 0 %></span>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <!-- Auth Modal (For non-logged in users) -->
    <div class="modal" id="authModal">
        <div class="modal-content">
            <div class="modal-icon">🔒</div>
            <h2>Join Our Community</h2>
            <p>Sign up or log in to access full content, like posts, comment, and connect with other members!</p>
            <div class="modal-buttons">
                <button type="button" class="btn-modal btn-primary" onclick="window.location.href='/register'">
                    Sign Up
                </button>
                <button type="button" class="btn-modal btn-secondary" onclick="window.location.href='/login'">
                    Login
                </button>
            </div>
        </div>
    </div>

    <!-- OTP Verification Modal (For logged in users) -->
    <div class="modal" id="otpModal">
        <div class="modal-content">
            <div class="modal-icon">📩</div>
            <h2>Verify Your Account</h2>
            <p>We've sent a One-Time Password (OTP) to your registered email or phone. Please enter it below to verify your account.</p>

            <form id="otpForm" onsubmit="verifyOtp(event)">
                <input 
                    type="text" 
                    id="otpInput" 
                    class="otp-input" 
                    placeholder="Enter 6-digit OTP" 
                    maxlength="6"
                    inputmode="numeric"
                    required 
                />

                <div class="modal-buttons">
                    <button type="submit" class="btn-modal btn-primary">
                        Verify OTP
                    </button>
                    <button type="button" class="btn-modal btn-secondary" onclick="closeModal()">
                        Later
                    </button>
                </div>
            </form>

            <div class="resend-otp">
                <p>Didn't receive the code?</p>
                <button type="button" class="btn-link" onclick="resendOtp()">
                    Resend OTP
                </button>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; 2024 BlogShare. All rights reserved.</p>
    </footer>

    <script>
        // Get user data from EJS
        const isUserLoggedIn = <%= user ? 'true' : 'false' %>;

        function triggerModal() {
            if (isUserLoggedIn) {
                // Show OTP verification modal for logged-in users
                showOtpModal();
            } else {
                // Show auth modal for non-logged-in users
                showAuthModal();
            }
        }

        function showAuthModal() {
            closeAllModals();
            document.getElementById('authModal').classList.add('active');
        }

        function showOtpModal() {
            closeAllModals();
            document.getElementById('otpModal').classList.add('active');
        }

        function closeModal() {
            closeAllModals();
        }

        function closeAllModals() {
            document.getElementById('authModal').classList.remove('active');
            document.getElementById('otpModal').classList.remove('active');
        }

        function verifyOtp(event) {
            event.preventDefault();
            const otpValue = document.getElementById('otpInput').value;
            
            if (otpValue.length !== 6) {
                alert('Please enter a valid 6-digit OTP');
                return;
            }

            // Send OTP to backend for verification
            fetch('/api/otp/verify', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ otp: otpValue })
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    alert('OTP verified successfully!');
                    closeAllModals();
                    // Optionally redirect or update UI
                } else {
                    alert(data.message || 'OTP verification failed');
                }
            })
            .catch(err => {
                console.error('Error:', err);
                alert('An error occurred during verification');
            });
        }

        function resendOtp() {
            fetch('/api/otp/resend', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    alert('OTP resent successfully!');
                } else {
                    alert(data.message || 'Failed to resend OTP');
                }
            })
            .catch(err => {
                console.error('Error:', err);
                alert('An error occurred');
            });
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const authModal = document.getElementById('authModal');
            const otpModal = document.getElementById('otpModal');
            
            if (event.target === authModal || event.target === otpModal) {
                closeAllModals();
            }
        };
    </script>
</body>

</html>